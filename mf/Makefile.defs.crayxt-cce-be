#------------------------------------------------------------------------------
# KOJAK Makefile Definitions (Makefile.defs.crayxt-cce-be)
#------------------------------------------------------------------------------

CFGKEY = crayxt-cce
CONFIG = Cray XT system with CCE compilers

#------------------------------------------------------------------------------
# Platform Settings
#------------------------------------------------------------------------------
PREC   = 64
PFLAG  =
AFLAG  =

PREFIX = /opt/scalasca
OPARI2DIR = /opt/scalasca

# Default target (catamount|linux) can be overridden by XTARGET
XTARGET = -target=linux

PLAT      = crayxt
MACHINE   = -DMACHINE=\"Cray\ XT\ CCE\"
PLAT_LDIR = -DPFORM_LDIR=\".\"
PLAT_CONF = $(MACHINE) $(PLAT_LDIR)
PLATCC    = gcc
PLAT_CFLAGS =

OPTFLAGS = -O
CC       = cc $(XTARGET) -hnoomp
CFLAGS   = $(OPTFLAGS)
CXX      = CC $(XTARGET) -hnoomp
CXXFLAGS = $(OPTFLAGS)
F77      = ftn $(XTARGET) -hnoomp
F90      = ftn $(XTARGET) -hnoomp
FFLAGS   =
FPP      =
FDOPT    = -D
LDFLAGS  = $(OPTFLAGS)
UTILLIB  =
FOBASE   = pomp2_fwrapper_base.o

#------------------------------------------------------------------------------
# MPI Settings
#------------------------------------------------------------------------------

MPICC     = $(CC)
MPICXX    = $(CXX)
MPIF90    = $(F90)
MPILIB    = -lmpich
PMPILIB   = 
FMPILIB   = -lfmpich
FMPIOBJ   =
MPIEXTRA  = -DMPICH_IGNORE_CXX_SEEK -DHAS_MPI2_1SIDED
MPIELGLIB = libelg.mpi.a

MPI_BUILD_TARGETS   = all-salsa
MPI_INSTALL_TARGETS = install-salsa
MPI_CONFIG_TARGETS  = mpi_gen_headers

#------------------------------------------------------------------------------
# OpenMP Settings
#------------------------------------------------------------------------------

OMPCC      = $(CC)
OMPCXX     = $(CXX)
OMPF90     = $(F90)
OMPFLAG    = -homp
OMPELGLIB  = libelg.omp.a

#------------------------------------------------------------------------------
# Hybrid MPI/OpenMP Settings
#------------------------------------------------------------------------------

HYBCC      = $(MPICC)
HYBCXX     = $(MPICXX)
HYBF90     = $(MPIF90)
HYBFLAG    = $(OMPFLAG)
HYBELGLIB  = libelg.ompi.a

#------------------------------------------------------------------------------
# Hardware-Counter Settings
#------------------------------------------------------------------------------

