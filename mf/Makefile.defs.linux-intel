#------------------------------------------------------------------------------
# KOJAK Makefile Definitions (Makefile.defs.linux-intel)
#------------------------------------------------------------------------------

CFGKEY = linux-intel
CONFIG = Linux cluster with Intel compilers and MPICH mpi

#------------------------------------------------------------------------------
# Platform Settings
#------------------------------------------------------------------------------
PREC   = 32
PFLAG  =
AFLAG  =

PREFIX = /opt/scalasca
OPARI2DIR = /opt/scalasca

PLAT      = linux
#PLAT_LDIR = -DPFORM_LDIR=\"/tmp\"
MACHINE   = -DMACHINE=\"Linux\ Intel\"
PLAT_CONF = $(MACHINE) $(PLAT_LDIR)
PLATCC    = icc
PLAT_CFLAGS =

OPTFLAGS =
CC       = icc
CFLAGS   = $(OPTFLAGS) -Wall -Wno-unknown-pragmas -w1
CXX      = icpc
CXXFLAGS = $(OPTFLAGS) -Wall -Wno-unknown-pragmas -w1 -O3 -mieee-fp
#CXXFLAGS = $(OPTFLAGS) -O3 -mp    #Intel 8.x or older
F77      = ifort
#F77      = ifc    #Intel 7.x or older
F90      = $(F77)
FFLAGS   = $(OPTFLAGS) -warn all
FPP      = -fpp2
FDOPT    = -D
LDFLAGS  = $(OPTFLAGS)
UTILLIB  =
FOBASE   = pomp2_fwrapper_base.o

#------------------------------------------------------------------------------
# MPI Settings
#------------------------------------------------------------------------------

MPICC     = mpicc -cc="$(CC)"
MPICXX    = mpicxx -CC="$(CXX)"
MPIF90    = mpif90 -f90="$(F90)"
MPILIB    = -lmpich
PMPILIB   = -lpmpich
#PMPILIB   = # MPICH2
FMPILIB   = -lfmpich
FMPIOBJ   =
MPIEXTRA  =
#MPIEXTRA  = -DHAS_MPI2_1SIDED #MPICH2
MPIELGLIB = libelg.mpi.a

MPI_BUILD_TARGETS   = all-salsa
MPI_INSTALL_TARGETS = install-salsa
MPI_CONFIG_TARGETS  = mpi_gen_headers

#------------------------------------------------------------------------------
# OpenMP Settings
#------------------------------------------------------------------------------

OMPCC      = $(CC)
OMPCXX     = $(CXX)
OMPF90     = $(F90)
OMPFLAG    = -openmp
OMPELGLIB  = libelg.omp.a

#------------------------------------------------------------------------------
# Hybrid MPI/OpenMP Settings
#------------------------------------------------------------------------------

HYBCC      = $(MPICC)
HYBCXX     = $(MPICXX)
HYBF90     = $(MPIF90)
HYBFLAG    = $(OMPFLAG)
HYBELGLIB  = libelg.ompi.a

