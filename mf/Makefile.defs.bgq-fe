#------------------------------------------------------------------------------
# KOJAK Makefile Definitions (Makefile.defs.bgq-fe)
#------------------------------------------------------------------------------

CFGKEY = bgq
CONFIG = IBM BlueGene/Q

#------------------------------------------------------------------------------
# Platform Settings
#------------------------------------------------------------------------------
PREC   = 64
PFLAG  =
AFLAG  =

PREFIX = /opt/scalasca
OPARI2DIR = /opt/scalasca

PLAT      = generic
MACHINE   = -DMACHINE=\"IBM\ BG/Q\"
PLAT_LDIR = -DPFORM_LDIR=\".\"
PLAT_CONF = $(MACHINE) $(PLAT_LDIR)
PLATCC    = gcc -m$(PREC)
PLAT_CFLAGS =

OPTFLAGS =
CC       = xlc -q$(PREC)
CFLAGS   = $(OPTFLAGS)
CXX      = xlC -q$(PREC)
CXXFLAGS = $(OPTFLAGS) -O3
F77      = xlf -q$(PREC)
F90      =
FFLAGS   = $(OPTFLAGS)
FPP      =
FDOPT    = -WF,-D
LDFLAGS  = $(OPTFLAGS)
UTILLIB  =
#FOBASE   = pomp2_fwrapper_base.o

#------------------------------------------------------------------------------
# MPI Settings
#------------------------------------------------------------------------------

#MPICC     =
#MPICXX    =
#MPIF90    =
#MPILIB    = -lmpi
#PMPILIB   = -lpmpi
#FMPILIB   = -lepk.ad.fmpi
